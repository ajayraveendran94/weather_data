<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Weather Forecast</h1>
    
    <%= form_with url: forecast_path, method: :get, class: "mb-8" do |f| %>
        <div class="flex items-center">
            <%= f.label :address, "Enter address:", class: "mr-4 font-medium" %>
            <%= f.text_field :address, 
                placeholder: "123 Main St, City, State, Zip", 
                class: "flex-1 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                required: true %>
            <%= f.submit "Get Forecast", class: "ml-4 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
    <% end %>
</div>